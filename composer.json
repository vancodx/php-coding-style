{
  "name": "vancodx/php-coding-style",
  "description": "VanCodX PHP Coding Style",
  "keywords": [
    "vancodx",
    "coding-style",
    "php-cs-fixer",
    "fixer",
    "php_codesniffer",
    "phpcs",
    "standards"
  ],
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Ivan Chistyakov",
      "email": "vancodx@gmail.com"
    }
  ],
  "autoload": {
    "psr-4": {
      "VanCodX\\CodingStyle\\": "src/"
    }
  },
  "minimum-stability": "stable",
  "require": {
    "php": "^8.3",
    "friendsofphp/php-cs-fixer": "^3.65.0",
    "squizlabs/php_codesniffer": "^3.11.2"
  },
  "require-dev": {
    "roave/security-advisories": "dev-latest"
  },
  "scripts": {
    "test": [
      "php-cs-fixer fix",
      "phpcs -p"
    ]
  },
  "config": {
    "sort-packages": true,
    "optimize-autoloader": true
  }
}
